<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>
<table  class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th>Published on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title , blog%></td>
        <td><%= blog.desc %></td>
        <td><%= blog.published_on %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

